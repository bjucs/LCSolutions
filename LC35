
#LC35: Search Insert Position

class Solution:
    def searchInsert(self, nums: List[int], target: int) -> int:
        if target in nums:
            return nums.index(target)
        
        else:
            if nums[-1] < target:
                return len(nums)
            elif nums[0] > target:
                return 0
            else:
                for x in range(len(nums)-1):
                    if nums[x] <= target and nums[x+1] >= target:
                        return x+1
